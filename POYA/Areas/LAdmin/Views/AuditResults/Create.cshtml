@model POYA.Areas.LAdmin.Models.AuditResult

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>AuditResult</h4>
<hr />
<div class="row">
    <div class="col-md-7">
        <div id="ContentTitle">@(Model.ContentTitle)</div>
        <div id="Audit_Content"></div>
    </div>
    <div class="offset-md-1 col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden/>
            <input asp-for="ComplainantId" hidden/>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsContentLegal" /> @(Html.DisplayNameFor(model => model.IsContentLegal))
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AuditComment" class="control-label"></label>
                <textarea asp-for="AuditComment" class="form-control" placeholder='@(Localizer["Some comment"]). . .'></textarea>
                <span asp-validation-for="AuditComment" class="text-danger"></span>
            </div>
            <div class="form-group IllegalityTypeParent">
                <label asp-for="IllegalityType" class="control-label"></label>
                <select asp-for="IllegalityType" asp-items='@(Model.IllegalityTypeSelectListItems)' class="form-control"></select>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-info" id="BackEle">&laquo; @(Localizer["Back"])</a>
                <input type="submit" value='@(Localizer["Submit"])' class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(()=>{
            IsContentLegalCheckedListener();
            $(`#Audit_Content`).load(`@(Url.Action("GetContentDetails",new{Model.ContentId}))`);
        });

        function IsContentLegalCheckedListener(){

            $(`#IllegalityType`).change(()=>{
                if($(`#IllegalityType`).val()=="110"){
                    $(`#AuditComment`).attr(`placeholder`,`@(Localizer["Some comment like"]):(@(Localizer["brief"])) >(@(Localizer["description"]))  . , ,`);
                }else{
                    $(`#AuditComment`).attr(`placeholder`,`@(Localizer["Some comment"]) . , ,`);
                }
            });

            $(`#IsContentLegal`).change(()=>{
                if($(`#IsContentLegal`).is(':checked')){
                    $(`.IllegalityTypeParent`).hide();
                }else{
                    $(`.IllegalityTypeParent`).show();
                }
            });
        }
    </script>
}


@section Styles{
    <style>

        .IllegalityTypeParent{
            display: none;
        }

        #Audit_Content,#ContentTitle{
            cursor: default;
        }
        #ContentTitle{
            font-size:150%;
            text-align: center;
            width: 100%;
        }
        .form-check *{
            cursor: pointer;
        }
    </style>
}