@model IEnumerable<POYA.Areas.FunFiles.Models.FunDir>
@using POYA.Areas.FunFiles.Controllers;

@{
    ViewData["Title"] =Localizer[ "Folder"]+" & "+Localizer["Files"];
    Layout = "~/Views/Shared/_Layout.cshtml";

    var FunYourFiles=ViewData[nameof(FunYourFile)+"s"] as List<FunYourFile>;
        
    var FunYourFilesUnionFunDirs=Model
        .Select(
            p=>new{
                DOXXX=p.DOCreating, 
                Name=p.Name, 
                Id=p.Id, 
                Size=string.Empty,
                IsFile=false})
        .Union(
            FunYourFiles.Select(
                p=>new{
                    DOXXX=p.DOUploading, 
                    Name=p.Name, 
                    Id=p.Id, 
                    Size=p.FileSize,
                    IsFile=true,
                }
            )
        );
    
    var ParentDirId=Guid.Parse(ViewData["ParentDirId"].ToString());

    var FunDIrPath=ViewData["FunDIrPath"] as List<FunDir>;
}

<h1>@(ViewData["Title"])</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create" asp-route-ParentDirId='@(ParentDirId)'>@(Localizer["New directory"])</a>
    <a class="btn btn-outline-info" asp-action="FunUploadFiles" asp-controller='FunYourFiles' asp-route-ParentDirId='@(ParentDirId)'>
        @(Localizer["Upload files"])
    </a>

    <nav aria-label="breadcrumb" class="PathBreadcrumb">
        <ol class="breadcrumb">/ &nbsp;
            @foreach (var item in FunDIrPath)
            {
                <li class="breadcrumb-item">
                    <a href='@(Url.Action("Index",new{ParentDirId=item.Id}))'>@(item.Name)</a>
                </li> 
            }
        </ol>
    </nav>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @(Html.DisplayNameFor(model => model.Name))
            </th>
            <th>
                @(Localizer["Size"])
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.DOCreating))
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="FileAndDir">
        @foreach (var item in FunYourFilesUnionFunDirs) 
        {
            <tr item_id="@(item.Id)" class="FileAndDirTr">
                <td class="ItemName">
                    <a asp-action="Index" asp-route-ParentDirId='@(item.Id)'>
                        @(Html.DisplayFor(modelItem => item.Name))
                        @if(item.IsFile)
                        {
                            <span style="color: red;font-size: 70%">@(Localizer["file"])</span>
                        }
                    </a>
                </td>
                <td>
                    @(item.Size)
                </td>
                <td>
                    @(item.DOXXX.LocalDateTime)
                </td>
                <td class="OperationEle">
                    <button id="item_operation_button_@(item.Id)"  item_id='@(item.Id)' class='item_operation_button '>
                        ...
                    </button>
                    <div class="card card-body item_operation_card"  id="card_@(item.Id)">
                        <div  item_id='@(item.Id)' class='SubOperationEle Copy'>@(Localizer["Copy"])</div>  
                        <div  item_id='@(item.Id)' class='SubOperationEle Rename'>@(Localizer["Rename"])</div> 
                        <div  item_id='@(item.Id)' class='SubOperationEle Move'>@(Localizer["Move"])</div>   
                        <div  item_id='@(item.Id)' class='SubOperationEle Details'>@(Localizer["Details"])</div>   
                        <div  item_id='@(item.Id)' class='SubOperationEle Delete'>@(Localizer["Delete"])</div> 
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script>

        $(document).ready(()=>{


            $(document).on(`click`,`.item_operation_button`,(e)=>{ ItemOperationButtonClick(e);   });

            $(document).on(`blur`,`.item_operation_button`,()=>{$(`.item_operation_card`).hide();});
            

        });


        /**
         * @@param {Event}e
         */
        function ShowOperationCard(e){
            
            var item_id= $(e.target).parents('tr').attr(`item_id`);

            let OperationCard=$(`#card_${item_id}`);

            if(OperationCard.is(":visible")){

                OperationCard.hide();

            }else{

                $(`.item_operation_card`).hide();

                OperationCard.show();
                
                OperationCard.offset({ top:e.pageY,  left:e.pageX  });
                    
            }
        }




        /**
         * @@param {Event}e
         */
        function ItemOperationButtonClick(e){

            var item_id= $(e.target).attr(`item_id`);

            let OperationCard=$(`#card_${item_id}`);

            if(OperationCard.is(":visible")){

                OperationCard.hide();

            }else{

                $(`.item_operation_card`).hide();
                    
                OperationCard.show();

                let ItemOperationButton=$(`#item_operation_button_${item_id}`),
                    ItemOperationButton_top=Number(ItemOperationButton.offset().top),
                    ItemOperationButton_height=Number(ItemOperationButton.height()),
                    OperationCard_height=Number(OperationCard.height()),
                    window_height=Number($(window).height()),

                    ItemOperationButton_left=Number(ItemOperationButton.offset().left),
                    ItemOperationButton_width=Number(ItemOperationButton.width())*2,
                    OperationCard_width=Number(OperationCard.width()),
                    window_width=Number($(window).width()),
                    
                    _top=(ItemOperationButton_top+ItemOperationButton_height +OperationCard_height)>window_height?
                        (ItemOperationButton_top-OperationCard_height):(ItemOperationButton_top+ItemOperationButton_height),

                    _left=(ItemOperationButton_left+ItemOperationButton_width+OperationCard_width)>window_width?
                        (ItemOperationButton_left-OperationCard_width-ItemOperationButton_width):(ItemOperationButton_left+ItemOperationButton_width*1.5);

                
                
                OperationCard.offset({ top:_top,  left:_left  });

            }
        }

    </script>
}

@section Styles
{
    <style>

        .item_operation_button{
            cursor: pointer;
            transform: scale(1.5);
        }
        .ItemName{
            width: 20%;
            word-wrap: break-word;
            word-break: break-all;
        }

        .item_operation_card{
            display: none;
            position: absolute;
            text-align: center;
            color: blue;
            border-color: chocolate;
            font-size: 18px;
            z-index: 99;
            width: auto;
            height: auto;
            border-radius: 8px;
        }

        .item_operation_card div{
            border-radius: 6px;
            cursor: pointer;
            padding: 4px;
        }
        .item_operation_card div:hover{
            background-color: rgba(238,73,151,0.5);
            transform: scale(1.08);
        }

        .item_operation_button,.item_operation_button:hover{
            border: none;
            background-color: transparent;
        }
        

    </style>
}