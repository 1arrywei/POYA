@model POYA.Areas.FunFiles.Models.FunDir

@{
    //  ViewData["Title"] = Localizer["Rename"];
    //  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="times_funfiles_popup_close">&times;</div>

<h4>@(Localizer["Rename for"]) @(Model.Name)</h4>
<hr />
<div class="row">
    <div class="offset-1 col-10">
        <form asp-action="Edit" asp-controller="FunDirs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="ParentDirId" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" style='text-align:center'/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value='@(Localizer["Save"])' class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

