@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column account-manage-nav">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            @(Localizer["Basic Profile"])
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.UserInfoClass(ViewContext)" id="UserInfo" asp-page="./UserInfo">
            @(Localizer["Your info"])
        </a>
    </li>
    
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            @(Localizer["Password"])
        </a>
    </li>

    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                @(Localizer["External logins"])
            </a>
        </li>
    }
    @*
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
                Two-factor authentication
            </a>
        </li>
    *@

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
            @(Localizer["Your data"]). . .
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.POYAMessageNavClass(ViewContext)" id="poya-message" asp-page="./POYAMessage">
            @(Localizer["Message"])
        </a>
    </li>
</ul>

<style>
    .account-manage-nav li[class='nav-item']:hover{
        background-color:rgba(255, 0, 220,0.4);
        border-radius:6px;
        animation:AccountManageNavItemAnimation linear 0.2s forwards;
    }

  
</style>