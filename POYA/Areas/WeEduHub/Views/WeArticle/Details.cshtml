@model POYA.Areas.WeEduHub.Models.WeArticle

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserId=ViewData["UserId"]?.ToString()??string.Empty;
    var _WeArticleFileContentType=ViewData["WeArticleFileContentType"]?.ToString()??string.Empty;
}

<div class="row">
    <div class="col col-12">
        <div class="wearticle_title">@(Model.Title)</div>
        <span class="wearticle_class_and_">
            @(Localizer[ Model.FirstClassName]) > @(Localizer[Model.SecondClassName]) > @(Model.CustomClass) | @(new string('\u269D',Model.Complex))
        </span>
        <hr/>
    </div>
</div>

<div class="wearticle_content">
    @if(_WeArticleFileContentType.EndsWith("/pdf"))
    {
        <object 
            id="selected_file_content" 
            data='@(Url.Action("GetWeArticleFile",new{Id=Model.WeArticleContentFileId,area="WeEduHub"}))' 
            type='@_WeArticleFileContentType'>
        </object>  
    }
    else if(_WeArticleFileContentType.StartsWith("video/"))
    {
        <video 
            id="selected_file_content" 
            src='@(Url.Action("GetWeArticleFile",new{Id=Model.WeArticleContentFileId,area="WeEduHub"}))' 
            type='@_WeArticleFileContentType' 
            controls >
        </video> 
    }
    <hr/>
    <div>@(Model.Comment)</div>
</div>


<div class="wearticle_details__">
    <a id="go_back" class="btn btn-info">&laquo; @(Localizer["Back"])</a>   
    @if(UserId==Model.UserId)
    {
        <a class="wearticle_edit btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">@(Localizer["Edit"])</a>    
        <a class="wearticle_delete btn btn-info" asp-action="Delete" asp-route-id="@Model.Id">@(Localizer["Delete"])</a>
    }
</div>

@section Scripts
{
    <script>
        $(document).ready(()=>{
            
        });
    </script>
}

@section Styles
{
    <style>
        .wearticle_content object{
            border-radius: 5px;
            width: 100%;
            height: 100%;
            background-color: transparent;
        }
        .wearticle_content video{
            width: 90%;
        }
        .wearticle_class_and_{
            font-size: 80%;
        }
        .wearticle_title,.wearticle_content{
            text-align: center;
        }
        .wearticle_title{
            font-size: 160%;
        }
        .wearticle_content{
            margin-bottom: 20%;
        }
        .wearticle_details__{
            position: fixed;
            bottom: 8%;
        }
    </style>
}