@model POYA.Areas.WeEduHub.Models.WeArticle

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-12">
        <div class="wearticle_title">@(Model.Title)</div>
        <hr/>
        <div class="wearticle_content"></div>
    </div>
</div>



<div>
    <a id="go_back" class="btn btn-info">&laquo; @(Localizer["Back"])</a>   
</div>

@section Scripts
{
    <script>
        $(document).ready(()=>{
            $(`.wearticle_content`).append(`@(Html.Raw(Model.Content))`);
        });
    </script>
}

@section Styles
{
    <style>
        .wearticle_title,.wearticle_content{
            text-align: center;
        }
        .wearticle_content{
            margin-bottom: 20%;
        }
        #go_back{
            position: fixed;
            bottom: 8%;
        }
    </style>
}