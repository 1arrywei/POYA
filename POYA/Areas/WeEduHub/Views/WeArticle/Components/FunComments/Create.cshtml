@model POYA.Areas.WeEduHub.Models.FunComment
@using POYA.Unities.Helpers;

@{
    
}

<style>

</style>

<div class="row">
    <div class="col-sm-10 col-md-6">
        <form asp-action="Create" id="FunComment_Create_Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="WeArticleId" type="hidden" />
            <div class="form-group">
                <label asp-for="CommentContent" class="control-label"></label>
                <textarea asp-for="CommentContent" class="form-control" rows="3"></textarea>
                <span asp-validation-for="CommentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a id="FunComment_Create_Submit" class="btn btn-outline-info btn-sm" >@(Localizer["Submit"])</a>
            </div>
        </form>
    </div>
</div>


<script>

    $(document).ready(()=>{
        $(document).on(`click`,`#FunComment_Create_Submit`,(e)=>{ FunCommentCreateSubmitClick(e); })
    });

    function FunCommentCreateSubmitClick(e)
    {
        $.ajax({
            url:`@(Url.Action("Create","FunComments",new{area="WeEduHub"}))`,
            method:`POST`,
            data:new FormData(document.getElementById(`FunComment_Create_Form`)),
            headers: { '@(X_DOVEValues.CustomHeaderName)': `@(CSRF.GetAndStoreTokens(Context).RequestToken)`},
            success:()=>{
                $(`#FunCommentsIndex`).load(`@(Url.Action("FunCommentsIndex","FunComments",new{area="WeEduHub",Model.WeArticleId }))`);
            },
            error:()=>{

            }
        });
    }
    
</script>