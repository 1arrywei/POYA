@section Scripts{
    <script>
    /*====  VALUE       ====*/
    var InitHomeComment = "@(_UserEArticleHomeInfo.Comment)";
    var ConverImgMD5 = "";

    var AddEArticleSetId = "@X_DOVEValues.AddEArticleSetId";
    var DefaultEArticleSetId = "@X_DOVEValues.DefaultEArticleSetId";
    /**
     * EArticleSetContextMenu_${SetId}
     * @@param {String}SetId -The EArticle set id
     */
    var _EArticleSetContextMenuId =(SetId)=> `EArticleSetContextMenu_${SetId}`;
    /**
     * The Context Menu of EArticle set
     * @@param {String}SetId -The EArticle set id
     */
    function EArticleSetContextMenu(SetId) {
        var CommonSetIsEle = (SetId == AddEArticleSetId ||SetId==DefaultEArticleSetId)?``: `
        <div>
            <button type="button" class="btn btn-success" onclick="GoToEArticleSetEdit('${SetId}')">@Localizer["Edit"]</button>
        </div>
        <div>
            <button type="button" class="btn btn-success" onclick="GoToEArticleSetDelete('${SetId}')">@Localizer["Delete"]</button>
        </div>
        `;
        return `
        <div class="EArticle-Set-Context-Menu" id="${_EArticleSetContextMenuId(SetId)}" SetId="${SetId}">
            <div>
                <button type="button" class="btn btn-success" onclick="GoToEArticleSetDetails('${SetId}')">${SetId==AddEArticleSetId?`@Localizer["Add"]`:`@Localizer["Details"]`} </button>
            </div>
            ${CommonSetIsEle}
        </div>
        `;
    }

    </script>


    <script>
        /*====  UI          ====*/
        //  ONCLICK <<<<<<


        /**
        * Return the alert html string
        * @@param {string} ClassType The class type >_
        *      primary/secondary/success/info/danger/warning/dark/light
        * @@param  {string} Message The message
        */
        function MakeAlert(ClassType, Message) {
            var _Ele =
                `
                <div class="alert alert-${ClassType} alert-dismissible fade show" role="alert">${Message}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                `;
            $(".xbody").prepend(_Ele);
            setTimeout(function () {
                $('.alert').alert('close');
            }, 2500);
        }
    </script>

    <script>
    /*====  SERVICE     ====*/
    //      AN BUG HERE AFTER FIRST UPOAD AND I CAN'T FIND IT       //
        function UploadEArticleHomeInfo() {
            if (String( $("#UserEArticleHomeInfo_Comment").val()) == InitHomeComment &&
                $("#UserEArticleHomeInfo_Conver_Input").val().length < 1) return;
            var IsUploadCoverFile = $("#UserEArticleHomeInfo_Conver_Input").val().length > 0;
            var _userEArticleHomeInfo = new FormData();
            if (IsUploadCoverFile) {
                var _File = document.getElementById("UserEArticleHomeInfo_Conver_Input").files[0];
                _userEArticleHomeInfo.append("@(nameof(UserEArticleHomeInfo.CoverFile))", _File, _File.name);
            } else {
                _userEArticleHomeInfo.append("@(nameof(UserEArticleHomeInfo.Comment))", $("#UserEArticleHomeInfo_Comment").val());
            }
            $.ajax({
                url: "@(Url.Action(nameof(UserEArticleSetsController.UploadEArticleHomeInfo)))",
                type: "POST",
                data: _userEArticleHomeInfo,
                //  dataType: "json",
                processData: false,
                contentType: false,
                headers: {
                    "L-XSRF-TOKEN": "@(csrf.GetAndStoreTokens(Context).RequestToken)"
                },
                success: function () {
                    InitHomeComment =String( $("#UserEArticleHomeInfo_Comment").val());
                    MakeAlert("info", `@Localizer[ "Update successfully"]` + "!")
                    if (IsUploadCoverFile) {
                        document.getElementById("UserEArticleHomeInfo_Conver_Input").value='';
                    }
                    let _random = Math.floor(Math.random() * 100 + 1);
                    $(".EArticle-Home-Img-Ele").css("background-image",
                        `url("@(Url.Action("GetEArticleHomeCover", new { id=_UserEArticleHomeInfo.Id}))?random=${_random}")`);
                },
                error: function () {
                    MakeAlert("danger", `@Localizer["Some errors has occurred"]" + "!`);
                }
            });

        }
    </script>


    <script>
//====  DATA        ====//

    /**
     * Go to the EArticle Set
     * @@param {String}SetId -The Card id
     */
    function GoToEArticleSetDetails(SetId) {
           window.location.href = SetId == '@X_DOVEValues.AddEArticleSetId' ?
                    `@(Url.Action("Create","UserEArticleSets",new { area="EduHub"}))`:
            `@(Url.Action("XIndex","EArticles",new { area = "EduHub" }))?SetId=${SetId}`;
        event.preventDefault();
    }
    /**
     * Go to the EArticle Set
     * @@param {String}SetId -The Card id
     */
    function GoToEArticleSetEdit(SetId) {
        window.location.href = `/EduHub/UserEArticleSets/Edit/${SetId}`;
        event.preventDefault();
    }
    /**
     * Go to the EArticle Set
     * @@param {String}SetId -The Card id
     */
    function GoToEArticleSetDelete(SetId) {
        window.location.href = `/EduHub/UserEArticleSets/Delete/${SetId}`;
        event.preventDefault();
    }

        /**
         * Show context menu
         * @@param {String} SetId -The set id
         */
    function ShowEArticleSetContextMenu(SetId) {
        //  if ($(`#` + _EArticleSetContextMenuId(SetId)).length > 0) return false;
        $(".EArticle-Set-Context-Menu").remove();
        var _EArticleSetContextMenu = $(EArticleSetContextMenu(SetId));
        $("#EArticleSetContextMenu_Ele").append(_EArticleSetContextMenu);
        _EArticleSetContextMenu.offset({ top: window.event.pageY, left:  window.event.pageX });

        return false;
    }

    function RemoveEArticleSetContextMenu(SetId) {
        if ($(`#` + _EArticleSetContextMenuId(SetId)).length < 1) return;
        $(`#` + _EArticleSetContextMenuId(SetId)).remove();
    }


    function ReadMD5() {
        {
            var BlobSlice_ = File.prototype.slice || File.prototype.mozSlice || File.prototype.webkitSlice,
                ChunkSize = 20 * 1024 * 1024,
                Chunks = Math.ceil(_File.size / ChunkSize),
                CurrentChunk = 0,
                Spark_ = new SparkMD5.ArrayBuffer(),
                FileReader_ = new FileReader();
        }

        FileReader_.onload = function (e) {
            Spark_.append(e.target.result);
            CurrentChunk++;
            if (CurrentChunk < Chunks) {
                loadNext();
            } else {
                ConverImgMD5 = String(Spark_.end());
                UploadEArticleHomeInfo();
            }
        };
        FileReader_.onerror = function () {
            MakeAlert("danger",`@Localizer["Some errors has occurred"]`);
        };
        function loadNext() {
            var Start = CurrentChunk * ChunkSize,
                End = ((Start + ChunkSize) >= _File.size) ? _File.size : Start + ChunkSize;
            FileReader_.readAsArrayBuffer(BlobSlice_.call(File_, Start, End));
        }
        loadNext();
        }

    function CheckKeyCodeConfirmation() {
        var keyCode = event.keyCode ? event.keyCode : event.which ? event.which : event.charCode;
        if (keyCode == 13) {
            var _Comment = $("#UserEArticleHomeInfo_Comment").val();
            if (InitHomeComment != _Comment) {
                UploadEArticleHomeInfo();
            }
        }
    }

    </script>

    <script>

        $(document).ready(function () {

            $(".EArticleSetCard").contextmenu(function () {
                var SetId = $(this).attr("SetId");
                event.preventDefault();
                return ShowEArticleSetContextMenu(SetId);
            });

            $(document).on("mouseover", ".EArticleSetCard", function () {
                var SetId = $(this).attr("SetId");
                //  console.log(">>>>>>"+SetId);
                RemoveEArticleSetContextMenu(SetId);
            });

            /*
            $(".EArticle-Home-Img-Ele").css("background-image",
                'url("@@(Url.Action("GetEArticleHomeCover", new { area="EduHub",id=_UserEArticleHomeInfo.Id}))")');
            */

            $("#UserEArticleHomeInfo_Conver").on("click", function () {
                $("#UserEArticleHomeInfo_Conver_Input").click();
            });
            $("#UserEArticleHomeInfo_Comment").keypress(function () {
                CheckKeyCodeConfirmation();
            });

            $("#UserEArticleHomeInfo_Conver_Input").on("change", function () {
                //  ReadMD5();
                UploadEArticleHomeInfo();
            });

            $(".card").on("click", function () {
                var SetId = $(this).attr("SetId");
                GoToEArticleSetDetails(SetId);
            });

        });

    </script>
}

