@model IEnumerable<POYA.Areas.EduHub.Models.EArticle>
@using POYA.Areas.EduHub.Models
@using POYA.Unities.Helpers;


@{
    ViewData["Title"] = "XIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var EArticleFiles = ViewData["EArticleFile"] as List<EArticleFile>;
    var _SetId = TempData["SetId"];
    TempData.Keep();
    var _UserEArticleSet = ViewData[nameof(UserEArticleSet)] as UserEArticleSet;
    var _pageSize = Context.Request.Cookies["PageSize"] ?? "8";
    var _CurrentUserId = ViewData["CurrentUserId"].ToString();
    var _IsDefaultEArticleSet = _UserEArticleSet.Id == X_DOVEValues.DefaultEArticleSetId;
    var _IsOwn = _CurrentUserId == _UserEArticleSet.UserId && !string.IsNullOrEmpty(_CurrentUserId);
    //  var _EArticleUserEmail = ViewData["EArticleUserEmail"];
}

<hr />
<div class="row">
    <div class="col col-12 User-EArticle-Set">
        <span style="font-size:250%;font-weight:bolder">@(_UserEArticleSet.Name)</span>
        <br />
        <span class="float-right">
            <span style="font-size:80%">@(_UserEArticleSet.Label)</span>
            <br />
            <span style="font-size:80%">@(_UserEArticleSet.Comment)</span>
            <br />
          
            @if (_IsOwn)
            {
                <a asp-action="Create" asp-route-SetId="@(_SetId)">@(Localizer["Write"]) &raquo;</a>
            }
            else
            {
                <span style="font-size:80%"> @(Localizer["By"] )
                    <a asp-area="Identity" asp-page="/Account/ViewUserInfo" asp-route-UserId="@(_UserEArticleSet.UserId)">@(_UserEArticleSet.UserName)</a> 
                </span>

            }
        </span>
    </div>
</div>


<div class="row">
    @foreach (var a in ViewData["_EArticles"] as IPagedList<EArticle>)
    {
        var _EArticleFiles = EArticleFiles.FirstOrDefault(p => p.EArticleId == a.Id);
        <div class="col col-4 col-lg-2 col-md-3">
            <div class="card" name="EArticleHomeCard" style="margin-top:6px;" onclick="GoToDetails('@a.Id')">
                @if (_EArticleFiles == null)
                {
                    <div class="card-img-top card-img-top-text" alt="@(a.Title)">
                        <span style="font-size:80%;zoom:80%;">@(Html.Raw(a.Content))</span>
                    </div>
                }
                else
                {
                    <video src="@Url.Action("GetFile", "LUserFiles", new { id = EArticleFiles.FirstOrDefault(p=>p.EArticleId==a.Id).Id, area = "XUserFile" })" class="card-img-top" alt="@(a.Title)" preload="metadata"></video>
                }
                <div class="card-body">
                    <p class="card-text">
                        <a asp-action="Details" asp-route-id="@a.Id" title="@(a.Title)" class="title">@Html.DisplayFor(modelItem => a.Title)</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<div class="float-right PageEle">
    <div>
        <div class="form-inline">
            <input type="text" style="width:70px;" class="form-control" id="_pageSize" title='@Localizer["Press ENTER to save"]' value="@_pageSize" /> 
            @(Html.PagedListPager((IPagedList<EArticle>)ViewData["_EArticles"], _page => Url.Action("XIndex", new { SetId = _SetId, _page = _page }),  PagedListRenderOptions.OnlyShowFivePagesAtATime))
        </div>
    </div>
</div>

<div id="OperationEle">
    <a id="BackA" class="btn btn-info">&laquo; @(Localizer["Back"])</a>
    @if (_IsOwn && !_IsDefaultEArticleSet)
    {
        <a asp-action="Edit" asp-controller="UserEArticleSets" asp-route-id="@_UserEArticleSet.Id" class="btn btn-primary">@(Localizer["Edit"])</a>
        <a asp-action="Delete" asp-controller="UserEArticleSets" asp-route-id="@_UserEArticleSet.Id" class="btn btn-danger">@(Localizer["Delete"])</a>
    }
</div>


@section Scripts{
    <script>

        /**
         *
         * @@param { string} Id
         */
        function GoToDetails(Id) {
            window.location.href = `/EduHub/EArticles/Details/${Id}`;
        }

        $(document).ready(function () {

            //  #region
            /*
            $("#AuthorTypeSelect option[value='@@(ViewData["IsIndividual"].ToString().ToLower())']").attr( "selected", true );
            $("#AuthorTypeSelect").on("change", function () {
                _Service.ChangeAuthorType($("#AuthorTypeSelect option:selected").val())
            });
                */
            //  #endregion
        });
    </script>
}


@section Styles{
    <link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
    <style>

        #_pageSize{
            width:80px;
        }
        #OperationEle {
            position: fixed;
            bottom: 80px;
        }
        .User-EArticle-Set {
            text-align: center;
            border-radius: 20px;
            background: rgba(232,200,88,0.0);
            animation: BgAnimation 15s linear infinite alternate;
            cursor: default;
        }

    

        .author {
            font-size: 60%;
            color: blue;
        }

        .title {
            font-size: 80%;
            word-wrap: break-word;
            word-break: break-all;
            color: darkorchid;
        }

        .main-icon {
            max-height: 80px;
            max-width: 80px;
        }

        #SortBySelect {
            zoom: 120%;
            margin-top: 10px;
        } [name='EArticleHomeCard'] {
            max-height: 120px;
            overflow: hidden
        }

        .card-body {
            margin-top: -20px;
        }

        .card-img-top-text {
            overflow: hidden;
        }
        .card {
            cursor:pointer;
        }

        .card:hover {
            animation: AnimationBoxShadow 0.2s linear 1 forwards;
        }

       

        .EArticleSearchCol {
            zoom: 80%;
        }
    </style>
}
