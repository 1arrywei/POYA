@model POYA.Areas.XUserFile.Models.LUserFile

@{
    var FileUrl = Url.Action("GetFile", "LUserFiles", new { id = Model.Id });
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @if (Model.ContentType.Contains("video"))
            {
                <video src="@FileUrl" type="@(Model.ContentType)" controls></video>
            }
            else if (Model.ContentType.Contains("image"))
            {
                <img src="@FileUrl" />
            }
            else if (Model.ContentType.Contains("audio"))
            {
                <audio src="@FileUrl" controls loop></audio>
            }
        </dd>
        <dt class="col-sm-2">
            @(Html.DisplayNameFor(model => model.Name))
        </dt>
        <dd class="col-sm-10">
            <a asp-action="GetFile" asp-route-id="@(Model.Id)" title='@Localizer["Get it"]'>@(Model.Name) &#8675;</a>
        </dd>
        <dt class="col-sm-2">
            @(Html.DisplayNameFor(model => model.DOCreate))
        </dt>
        <dd class="col-sm-10">
            @(Html.DisplayFor(model => model.DOCreate.LocalDateTime))
        </dd>

    </dl>
</div>

<style>
    video, img {
        max-height: 500px;
        max-width: 90%;
    }
</style>