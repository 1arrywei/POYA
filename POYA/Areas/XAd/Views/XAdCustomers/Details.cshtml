@model POYA.Areas.XAd.Models.XAdCustomer
@using POYA.Areas.XAd.Controllers;

@{
    ViewData["Title"] =Localizer[ "Details"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <hr />
    <img src='@Url.Action(nameof(XAdCustomersController.GetXAdCustomerFilesAsync),new { MD5=Model.StoreIconMD5})' class="Store-Icon"/>
    <dl class="row">
        <dt class = "col-sm-2">
            @(Html.DisplayNameFor(model => model.Name))
        </dt>
        <dd class = "col-sm-10">
            @(Html.DisplayFor(model => model.Name))
        </dd>
        <dt class = "col-sm-2">
            @(Html.DisplayNameFor(model => model.UserName))
        </dt>
        <dd class = "col-sm-10">
            @(Html.DisplayFor(model => model.UserName))
        </dd>
        <dt class = "col-sm-2">
            @(Html.DisplayNameFor(model => model.DORegistering))
        </dt>
        <dd class = "col-sm-10">
            @(Model.DORegistering.LocalDateTime)
        </dd>
        <dt class = "col-sm-2">
            @(Html.DisplayNameFor(model => model.Address))
        </dt>
        <dd class = "col-sm-10">
            @(Html.DisplayFor(model => model.Address))
        </dd>
    </dl>

</div>

<div class="col-sm-2">
    <a asp-action="Index" class="btn btn-outline-info" id="BackA">&laquo; @(Localizer[ "Back"])</a> 
    <a asp-action="Edit" asp-route-id='@Model.Id' class="btn btn-outline-primary">@(Localizer["Edit"])</a> 
</div>

@section Scripts{
    <script>

    </script>
}

@section Styles{
<style>
    .Store-Icon{
        max-height: 50%;
        max-width: 50%;
    }
    .Store-Icon:hover{
        animation: StoreIconHoverAnimation 0.2s linear forwards;
    }

    @@keyframes StoreIconHoverAnimation{
        0%{
            transform: scale(1);
        }
        75%{
            transform: scale(1.08);
        }
        100%{
            transform:scale(1.05);
        }
    }

</style>
}