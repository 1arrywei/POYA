
@{
        var Light_String="Light";
        var Dark_String="Dark";
        var C7EDCC_String="_C7EDCC";
        var White_String="white";
        var Black_String="black";
        var THEME_String=Context.Request.Cookies["THEME"]??Light_String;
    
}

<script>
    $(document).ready(function(){
        $(`.pagination>li>a`)
            .css(`background-color`,`@(THEME_String==Dark_String?Black_String:THEME_String==Light_String?White_String:C7EDCC_String)`);
        $(`.pagination>li>a:hover`)
            .css("background-color",`@(THEME_String==Dark_String?Black_String:C7EDCC_String)`);
        $(`#_body,footer,.dropdown *,select`)
            .css({
                "background-color":`@(THEME_String==Dark_String?Black_String:THEME_String==Light_String?White_String:C7EDCC_String)`,
                `color`:`@(THEME_String==Dark_String?C7EDCC_String:Black_String)`
            });
        $(`.table`)
            .css("color",`@(THEME_String==Dark_String?White_String:Black_String)`);
        $(`input[class=form-control],textarea[class=form-control]`)
            .css(`background-color`,`@(THEME_String==Light_String?White_String:C7EDCC_String)`);
        $(`.button`)
            .css(`color`,`@(THEME_String==Dark_String?C7EDCC_String:Black_String)`);
        $(`select,.card`)
            .css({
                `background-color`:`@(THEME_String==Dark_String?Black_String:THEME_String==Light_String?White_String:C7EDCC_String)`,
                `color`:`@(THEME_String==Dark_String?C7EDCC_String:Black_String)`
            });
        $(`[name='UserAvatarImg']`)
            .css(`background-color`,`@(THEME_String==Dark_String?Black_String:THEME_String==Light_String?White_String:C7EDCC_String)`);
        $(`#_ContentEditor`)
            .css(`color`,`@(THEME_String==Dark_String?C7EDCC_String:Black_String)`)

    });
</script>
